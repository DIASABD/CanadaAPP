<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Canada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.canadaapp.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_app"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#DB1702"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <ListView
        android:id="@+id/listewiew_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_app" />

    <TextView
        android:id="@+id/quebec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="CanadaApp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:textColor="#fff"
        android:textSize="35dp" />

    <ImageView
        android:id="@+id/image_canada"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/quebec"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/canada" />

</RelativeLayout>
